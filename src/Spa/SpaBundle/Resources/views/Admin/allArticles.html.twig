<html>
    <head>
        <title>Administration - Liste des articles</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" 
              integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" 
              crossorigin="anonymous">
    </head>

    <body>      
        <div class="row">
            <div class="col-md-3" id="leftCol">
                {% include "::navbarAdmin.html.twig" %}
            </div>
            <div class="col-md-6">
                {% for article in articles %}
                    <li>
                        {{article.title}}
                        <a href="{{ path('spa_spa_admin_modifarticles', {'id': article.idarticles}) }}" class="btn btn-default">Modifier</a>
                        <a href="{{ path('spa_spa_admin_deletearticles', {'id': article.idarticles})}}" class="btn btn-default">Supprimer</a>
                    </li>
                {% endfor %}
            </div>
        </div>
        {% javascripts '@SpaSpaBundle/Resources/views/lib/jquery-1.12.0.min.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% javascripts '@SpaSpaBundle/Resources/views/js/changeView.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
