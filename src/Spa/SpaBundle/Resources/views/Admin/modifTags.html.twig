<html>
    <head>
        <title>Administration - Modification d'une race</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" 
              integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" 
              crossorigin="anonymous">
    </head>

    <body>      
        <div class="row">
            <div class="col-md-3" id="leftCol">
                {% include "::navbarAdmin.html.twig" %}
            </div>
            <div class="col-md-6">
                <form name="tags" method="post" action="/spa33/web/app_dev.php/admin/save/tags">
                    <input type="hidden" id="Tags_idTags" name="Tags[idTags]" class="form-control" value="{{tag.idTags}}">
                    <div class="form-group">
                        <label class="control-label required" for="tags_name">Intitul√© du tag</label>
                        <input type="text" id="tags_name" name="Tags[name]" required="required" class="form-control" value="{{tag.name}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" id="tags_save" name="Tags[save]" class="btn-default btn">Modifier</button>
                    </div>
                </form>
            </div>
        </div>
        {% javascripts '@SpaSpaBundle/Resources/views/lib/jquery-1.12.0.min.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% javascripts '@SpaSpaBundle/Resources/views/js/changeView.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>